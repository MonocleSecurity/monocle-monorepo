{
  "name": "monocle",
  "private": true,
  "version": "1.0.0",
  "license": "UNLICENCED",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "plop": "plop --plopfile scripts/plop/plopfile.ts --dest . --require ./scripts/ts-node-register",
    "build": "lerna run build --stream --scope=@monocle/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typescript": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^14.14.27",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "google-protobuf": "^3.15.0-rc.1",
    "husky": "^5.0.9",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "plop": "^2.7.4",
    "prettier": "2.2.1",
    "react-scripts": "^4.0.2",
    "ts-node": "^9.1.1"
  }
}

{
  "include": ["./packages/**/*", "./common.d.ts"],
  "exclude": ["./packages/*/dist", "./packages/*/public", "./packages/*/build"],
  "compilerOptions": {
    "allowUmdGlobalAccess": true,
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsxdev",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@monocle/icons": ["./packages/icons/src"],
      "@monocle/components": ["./packages/components/src"],
      "@monocle/common": ["./packages/common"],
      "@monocle/protos": ["./packages/protos/generated"],
      "@monocle/protobuf": ["./packages/protobuf/generated"]
    }
  }
}

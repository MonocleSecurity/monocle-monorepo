{
    "include": ["packages/*/src"],
    "compilerOptions": {
        "allowUmdGlobalAccess": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "@monocle/*": ["packages/*/src"]
        }
    }
}

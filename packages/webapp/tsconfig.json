{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "../../common.d.ts"],
  "compilerOptions": {
    "strict": true,
    "outDir": "lib",
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "jsx": "react"
  },
  "references": [
    { "path": "../components/src" },
    { "path": "../icons/src" },
    { "path": "../common/src" },
    { "path": "../protos/src" }
  ]
}
